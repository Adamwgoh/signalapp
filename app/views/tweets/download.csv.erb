<%= keyword = params[:search] %>
<%= @tweets = $client.search(keyword, result_type:'recent').take(200).collect() %>
<%= headers = ['Username', 'Created_at', 'Content'] %>
<%= CSV.generate_line headers %>
<%= @tweets.each do |t| %>
<%= CSV.generate_line([t.user['name'], t.created_at, t.text]) -%>
<% end -%>
